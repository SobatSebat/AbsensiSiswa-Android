<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpinnerItem" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:dropDownVerticalOffset">?attr/dropdownListPreferredItemHeight</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:popupElevation">3dp</item>
        <item name="android:stateListAnimator">@drawable/spinner_sla</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.SplashScreen">
      <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
